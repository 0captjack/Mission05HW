
@{
    ViewData["Title"] = "New Movie";
    // Form for entering new movie information
}
@model Mission04HW.Models.ApplicationResponse

<h1>New Movie Submission Page</h1>
<p>"THIS HAD BETTER BE GOOD"</p>
<br /> <br /> 

<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" /><br /><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="R">R</option>
            <option value="PG13">PG-13</option>
            <option value="PG">PG</option>
            <option value="G">G</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="Lent_To">Lent To:</label>
        <input asp-for="Lent_To" /><br /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br /><br />

        <button type="submit">Submit</button>

        <div asp-validation-summary="All"></div>

    </form>
</div>
